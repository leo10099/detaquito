@import "../../../../styles/partials/_theme.styl"
@import "../../../../styles/partials/_responsiveness.styl"
@import "../../../../styles/partials/_fonts.styl"

.predict__single-view__container
  display grid
  justify-content center
  align-items: flex-start
  margin auto
  @media screen and (max-width:$tablet)
    margin-bottom 3.5rem
  @media screen and (min-height:$tablet)
    margin-top: -13rem
.predict__single-view__content
  @media screen and (max-width:$tablet) and (orientation: landscape)
    max-width 420px
  @media screen and (max-width:$tablet)
    width 100%
    height 400px
    display grid
    grid-template-rows 1fr 50px
  @media screen and (min-width:$tablet)
    height 400px
    width 769px
    display grid
    grid-template-rows 1fr 60px
.predict__single-view__content__body
  display grid
  text-align center
  align-items center
  height 100%
  width 100%
  letter-spacing 1.5px
  line-height 1rem
  @media screen and (max-width:$tablet) and (orientation: landscape)
    max-width 400px
  @media screen and (min-width:$tablet)
    grid-template-rows 0.4fr 1fr
    grid-template-columns 120px 0.5fr 1fr 1fr 0.5fr 120px
    padding 2rem
    .local
      font-size 1.5rem
      font-weight: normal
      grid-column-start 1
      grid-column-end 3
      margin-right 20%
      padding-bottom 1rem
    .visitante
      font-size 1.5rem
      grid-column-start 3
      font-weight: normal
      grid-column-end -1
      margin-left 20%
      padding-bottom 1rem
    .homeTeamGroup
      grid-row-start 2
      grid-column-start 1
      grid-column-end 2
      display grid
      height 100%
      padding-top 1.5rem
    .awayTeamGroup
      grid-row 2
      grid-column-start 5
      grid-column-end -1
      display grid
      height 100%
      padding-top 1.5rem
    .homeTeamGroup__name, .awayTeamGroup__name
      line-height: 1.3
      @media screen and (min-width:$tablet)
        font-size 1.1rem
      @media screen and (max-width:$tablet)
        font-family: "Rustica"
    .homeInputGroup
      margin 0
      padding 0
      grid-row 2
      grid-column-start 2
      grid-column-end 3
    .awayInputGroup
      margin 0
      padding 0
      grid-row 2
      grid-column-start 4
      grid-column-end 5
    .predict__single-view__content__body__vs
      grid-row 2
      grid-column-start:3
      grid-column-end: 4
      font-family "Rustica"
      font-weight normal
      font-size: 2rem
      color $dark !important


  @media screen and (max-width:$tablet)
    grid-template-rows 50px 3fr 20px 2.5fr
    grid-template-columns 160px 160px
    justify-content: center
    align-items: center

    img
      padding-bottom 1rem
    .predict__single-view__content__body__vs
      grid-column 1/-1
      padding-top 2rem
      justify-content center
      font-family "Rustica"
      font-weight normal
      font-size: 1.2rem
      color $dark

.predict__single-view__content__footer
  display flex
  height 100%
  @media screen and (max-width:$tablet)
    width: 100%

  @media screen and (max-width:$tablet) and (orientation: landscape)
    max-width 420px
  align-items center
  justify-content space-between !important
  span
    font-weight bold
    letter-spacing 2px
    padding: 6px
    justify-self: center
    margin 0 auto
    color $dark
  & button
    @media screen and (min-width:$tablet)
      font-size 1rem
    letter-spacing 1.1px
    height 100%
    width 40%
    padding 0
    margin 0
    background $secondary
    color $dark
    border-top-left-radius 5px !important
    border-top-right-radius 5px !important
    font-weight bold
    & > *
      color $dark !important
    @media screen and (max-width:$tablet)
      font-size 0.8rem
      display inline-block
    &:hover
      transform translate(0px)

.homeTeamGroup, .awayTeamGroup
  @media screen and (max-width:$tablet)
    padding-top 1rem