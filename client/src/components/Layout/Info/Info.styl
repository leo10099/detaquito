@import "../../../styles/partials/_theme.styl"
@import "../../../styles/partials/_responsiveness.styl"

#Info
  height 100vh
  @media screen and (max-width:768px) and (orientation landscape)
    height 100%
  background-image url('/static/img/bg/fondo-info-hd.jpg')
  background-position bottom
  background-size: cover
  padding-top 2rem

.info__container
  background-image url('/static/img/bg/info.png')
  @media screen and (max-width:768px) and (orientation landscape)
    background-image none
  background-size contain
  background-repeat no-repeat
  background-position center
  height 80%
  margin 0 auto
  width 500px
  @media screen and (max-width:768px)
    width 320px
    margin-top 2rem
    font-weight: bold
  @media screen and (min-width:769px) and (max-width:900px)
    width 450px
  @media screen and (min-width:900px) and (max-width:1200px)
    width 480px
  @media screen and (max-width:768px) and (orientation landscape)
    width 100%
    height 100%
    margin-top 2rem
    margin-bottom 4rem


.info__text-frame
  display grid
  margin auto
  max-width 45%
  max-height 600px
  padding-top 5.5rem
  @media screen and (min-height:1000px)
    padding-top 7rem
  @media screen and (min-width:1300px)
    max-width 62%
  @media screen and (max-width:768px) and (orientation landscape)
    top -25%
    font-weight: bold
    color $white !important
    background-color rgba(10,10,10,0.3)
    width: 400px
  word-wrap break-word
  text-align center
  line-height 2.2
  letter-spacing 1px
  color $black
  @media screen and (max-height:900px)
    font-size 0.8rem
  @media screen and (max-height:800px)
    font-size 0.6rem
  @media screen and (max-width:768px)
    padding-top 2.6rem
    max-width: 63% !important
    word-wrap break-word
    font-weight: normal !important
    font-size 0.5rem
.info__text-frame--highligth
    color lighten($violet, 20%)
    font-weight bolder


.info__text-frame__title
  font-family Rustica
  font-size 1rem
  color $black
  line-height 1.6rem
  @media screen and (max-width:768px) and (orientation landscape)
    line-height 1.2
    color $white
  padding-top 0.9rem
  @media screen and (max-height:900px)
    font-size 0.8rem
  @media screen and (max-height:800px)
    font-size 0.6rem

.info__text-frame--foter
  padding-right 0.8rem
  padding-top 1rem
  @media screen and (max-width:768px)
    padding-top 1.5rem
    a
      font-size 1.5rem !important
      color $secondary !important
      letter-spacing: 4px !important
      padding-right 10px
.info__text-frame--foter > a
  font-weight bold
  color lighten($violet, 20%)
  font-size 1rem
  @media screen and (max-width:768px)
    font-size 0.8rem
    letter-spacing 1px
.info__text-frame--foter > a:hover
  color lighten($violet, 30%)


